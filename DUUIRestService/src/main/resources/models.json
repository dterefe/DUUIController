model Pipeline {
    _id: ObjectId,
    name: String,
    createdAt: Date,
    components: Component[]
}

model Component {
    name: String,
    options: Object
}

model Process {
    _id: ObjectId,
    pipeline: Pipeline,  Reference _id
    status: String,
    options: Object
}


